                                            enableRearrange: true,
                                            enableResize: true,
                                            enableTrash: false,
 
                                            // Options
                                            animateSpeed: 150,
                            });*/
		// call quicksand and assign transition parameters
		$holder.quicksand($filteredData, {
			duration: 800,
			easing: 'easeInOutQuad',
                        
		});
             /*   myshape();*/
