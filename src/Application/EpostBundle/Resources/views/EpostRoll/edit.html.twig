{% extends "ApplicationEpostBundle::layout.html.twig" %}


  {% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset('css/jquery.rating.css') }}" type="text/css" media="all"/>
     {{ form_stylesheet(edit_form) }}
 {% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="{{ asset('js/jquery.rating.js') }}" type="text/javascript"></script>

{% endblock %}

{% block content_header '' %}
{% block title %}

{% endblock %}



{% block content %}
<h1>EpostRoll edit</h1>

<form action="{{ path('epostroll_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('epostroll') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('epostroll_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
