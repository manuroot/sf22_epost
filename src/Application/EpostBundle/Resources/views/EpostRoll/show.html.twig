{% extends "ApplicationEpostBundle::layout.html.twig" %}

{% block javascripts %}
{{ parent() }}
 {{ tinymce_init() }}
{% endblock %}

  {% block stylesheets %}
{{ parent() }}
      <link rel="stylesheet" href="{{ asset('bundles/applicationepost/css/sliding.css') }}" type="text/css" media="all"/>
     
 {% endblock %}

{% block content_header '' %}
{% block title %}
EDITION LIEN
{% endblock %}

{% block content %}
   <table class="table table-striped table-bordered table-hover">
        <tbody>
            <tr><th>Id</th><td>{{ entity.id }}</td> </tr>
            <tr><th>Name</th><td>{{ entity.name }}</td></tr>
            <tr><th>Link</th><td>{{ entity.link }}</td></tr>
            <tr> <th>Createdat</th><td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td></tr>
            <tr><th>Updatedat</th><td>{{ entity.updatedAt|date('Y-m-d H:i:s') }}</td></tr>
            <tr><th>Isvisible</th><td>{{ entity.isvisible }}</td></tr>
            <tr><th>Proprietaire</th><td>{{ entity.proprietaire.username }}</td></tr>
        </tbody>
  </table>


<a href="{{ path('epostroll')  }}" class="btn btn-small btn-success">Retour</a>
<a href="{{ path('epostroll_edit', { 'id': entity.id }) }}" class="btn btn-small btn-warning">Edit</a>
<br><br>

<form action="{{ path('epostroll_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit"  class="btn btn-small btn-danger">Delete</button>
</form>
   

{% endblock %}
