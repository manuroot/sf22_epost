{% extends app.request.isXmlHttpRequest ? 'ApplicationMyNotesBundle::layoutajax.html.twig' : 'ApplicationMyNotesBundle::layout.html.twig' %}

{% block title %}Sticky Notes{% endblock %}

{% block content_header '' %}

{% block content %}
{% if app.request.isXmlHttpRequest == '' %}
<h2>Edit Note</h2>
{% endif %}
<br>
<form class="form-horizontal" action="{{ path('notes_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit" class="btn btn-warning">Modifier</button>
 
        <a href="{{ path('notes') }}" class="btn btn-small btn-success">Retour</a>

    </p>
</form>

{% endblock %}